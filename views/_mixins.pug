mixin menuItem(name, url, nofollow)
    -
        const classes = ['nav-item'];
        const linkClasses = ['nav-link'];
        const attr = attributes || {};

        if (typeof attr.extraclass !== 'undefined') {
            classes.push(attr.extraclass);
        }

        if (pageUrl.split('?')[0] === url) {
            linkClasses.push('active');
        }

        if (name.includes(' Legacy')) {
            name = name.replace(' Legacy', '');
        }

        if (nofollow === true) {
            attr.rel = 'nofollow';
        }

    li(class=classes)
        a(class=linkClasses, href=`${url}${themeQs}`, rel=attr.rel)=name
